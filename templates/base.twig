{% block html_head_container %}

{% include 'html-header.twig' %}
	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

	<body class="{{body_class}}" data-template="base.twig">

		<header class="site__header">
			<div class="header__brand">
				<img class="brand__logo" src="{{site.theme.link}}/assets/svg/logo.svg" alt="Logo: Red and black race car">
				<span class="brand__text" role="banner">
					<a href="{{site.url}}" rel="home">{{site.name}}</a>
				</span>
			</div>
			<nav class="header__nav" role="navigation">
				{% include "menu.twig" with {'menu': menu.get_items} %}
			</nav>
		</header>

		<section class="site__content" role="main">
			{% if title %}<h1>{{title}}</h1>{% endif %}
			<!-- <div class="inner {{sidebar_class}}"> -->
				{% block content %}
					Sorry, no content
				{% endblock %}
			<!-- </div> -->
			{% if sidebar %}
				<aside class="layout-sidebar">
					{{sidebar}}
				</aside>
			{% endif %}
		</section>

		{% block footer %}
			<footer class="site__footer">
				{% include 'footer.twig' %}
			</footer>
			{{ function('wp_footer') }}
		{% endblock %}
	</body>
</html>
